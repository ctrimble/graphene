\#include "./graph_builder.cl.vm?partitionType=${partitionType[0]}&valueType=${valueType[0]}"

void ${constructEdgeFunction[0]}( global EdgeConstructionContext_${partitionType[0]}* context, int rangeOffset, global Edge_${valueType[0]}* edges );

kernel void constructEdges( global EdgeConstructionContext_${partitionType[0]}* context, global Edge_${valueType[0]}* edges ) {
    int rangeOffset = get_global_id(0);
    
    // test to see if we are in range.
    if( rangeOffset + context->range.start < context->range.end && context->overflowIndex < 0 ) {
        ${constructEdgeFunction[0]}( context, rangeOffset, edges );
    }
}
